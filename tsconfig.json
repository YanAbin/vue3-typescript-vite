{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "unplugin-vue-define-options/macros-global"
    ],
    "paths": {
      "utils/*": [
        "packages/utils/*"
      ],
      "packages/*": [
        "packages/*"
      ],
      "@custom/*": [
        "packages/components/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "**/*.vue",
    "play/tsconfig.json"
  ],
  "exclude": [
    "node_modules"
  ]
}